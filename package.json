{
  "name": "auto-coder-daily",
  "version": "1.0.0",
  "description": "Autonomous daily-code automation system that picks programming tasks, solves them using AI, creates meaningful commits, and pushes to GitHub automatically.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "daily": "tsx scripts/runDaily.ts",
    "archive": "tsx scripts/archive.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "automation",
    "daily-coding",
    "github",
    "ai",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "simple-git": "^3.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
