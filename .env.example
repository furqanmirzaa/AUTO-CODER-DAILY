# Environment Variables for AutoCoderDaily
# Copy this file to .env and fill in your values

# Google Gemini API Key (required for AI-powered solution generation)
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Personal Access Token (required for pushing commits)
# Needs 'repo' scope for private repos, or 'public_repo' for public repos
GITHUB_TOKEN=your_github_token_here

# GitHub Repository in owner/repo format
GITHUB_REPO=your_username/auto-coder-daily

# Git User Configuration (for commits)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# Optional: Task Sources Configuration
# Comma-separated list of enabled sources: leetcode,stackoverflow,github,ai
TASK_SOURCES=leetcode,stackoverflow,ai

# Optional: Minimum delay between commits in milliseconds (default: 60000 = 1 minute)
MIN_COMMIT_DELAY=60000

# Optional: Maximum delay between commits in milliseconds (default: 180000 = 3 minutes)
MAX_COMMIT_DELAY=180000

# Optional: Number of solution steps to generate (default: 5-10, random)
MIN_SOLUTION_STEPS=5
MAX_SOLUTION_STEPS=10
